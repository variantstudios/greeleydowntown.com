---
layout: null
sitemap: false

---
{% for business in site.directory %}
{
        "_type": "business",  
        "title": {{ business.Business | jsonify }},
        "location": {
            "_type": "location",
            "city": {{ business.City | jsonify }},
            "state": {{ business.State | jsonify }},
            "streetAddress": {{ business.Street | jsonify }},
            "zipcode": {{ business.Zip | jsonify }}
        },
          "slug": {
          "_type": "slug",
          "current": {{ business.url | jsonify }}
        },
        "body": [
            {
              "_type": "block",
              "children": [
                {
                  "_type": "span",
                  "marks": [],
                  "text":  {{ business.content | jsonify | strip_html }}
                }
              ],
              "markDefs": [],
              "style": "normal"
            }
         ],
        "businessContact": {
            "_type": "businessContact",
            "contactEmail": {{ business.Contact_Email | jsonify }},
            "contactName": {{ business.Contact_Name | jsonify }},
            "contactPhone": {{ business.Phone | jsonify }}
         },
         "logoImage": {
            "_type": "mainImage",
            "alt": {{ business.Business | jsonify }},
            "asset": {
              "_ref": {{ business.Logo_image_path | prepend: "image@file:///Users/brentrobbins/VS/greeleydowntown.com/_backups/long-jay1.cloudvent.net-1583135662" | jsonify  }},
              "_type": "reference"
            }
          },
          "links": [
            {
              "_type": "link",
              "link": {{ business.Website | jsonify }},
              "linkType": "business"
            }
        ],
        "seoSettings": {
            "_type": "seo",
            "description": {{ business.content | jsonify | strip_html }},
            "title": {{ business.Business | jsonify }}
          }
      }
  {% endfor %}
  